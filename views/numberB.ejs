    <div class="container mt-5">
        <h1>Book Search</h1>
        <form id="book-search-form">
            <div class="row">
                <div class="col-md-8">
                    <input type="text" id="search-input" class="form-control" placeholder="Enter book title">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </div>
        </form>
        <div class="row mt-5" id="books-container">
            <!-- Book containers will be dynamically added here -->
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            loadBooks();

            $('#book-search-form').submit(function (event) {
                event.preventDefault();
                let searchInput = $('#search-input').val();
                // Perform API request to search for books using searchInput
                $.get(`https://api.nytimes.com/svc/books/v3/lists/current/hardcover-fiction.json?api-key=I5WsxbEJ3SjQZyLcicEAN2ncroFh6GR5`, function (response) {
                    let books = response.results.books;
                    if (searchInput.trim() === '') {
                        displayBooks(books.slice(0, 16));
                    } else {
                        let filteredBooks = books.filter(book => book.title.toLowerCase().includes(searchInput.toLowerCase()));
                        displayBooks(filteredBooks);
                    }
                });
            });

            function loadBooks() {
                $.get(`https://api.nytimes.com/svc/books/v3/lists/current/hardcover-fiction.json?api-key=I5WsxbEJ3SjQZyLcicEAN2ncroFh6GR5`, function (response) {
                    let books = response.results.books;
                    displayBooks(books.slice(0, 16));
                });
            }

            function displayBooks(books) {
                let booksContainer = $('#books-container');
                booksContainer.empty();
                books.forEach(function (book) {
                    let bookContainer = $('<div>').addClass('book-container col-md-3');
                    let image = $('<img>').addClass('book-image').attr('src', book.book_image).attr('alt', book.title);
                    let description = $('<div>').addClass('book-description');
                    description.html(`<h5>${book.title}</h5><p>${book.description}</p>`);
                    bookContainer.append(image, description);
                    booksContainer.append(bookContainer);
                });
            }
        });
    </script>
